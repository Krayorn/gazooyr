<!DOCTYPE html>
<html>
  <head>
    <title>Gazooyr</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <nav>
    <a href="#">RAILS ROCKS</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar navbar-collapse navbar-expand-lg navbar-light bg-light " id="navbarNav">
      <% if user_signed_in? %>
        <%= link_to('account-dropdown', edit_user_registration_path, :id => "#account-dropdown", :class => "dropdown-toggle") %>        
      <% end %>
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/">Home</a>
        </li>
        <li>
          <% if user_signed_in? %>
            Connecté
            <%= link_to('Mon Compte', edit_user_registration_path) %></a>
          <% else %>
              Déconnecté
          <% end %>
        </li>
        <% if user_signed_in? %>
          <li>
          <%= link_to('logout', destroy_user_session_path, method: :delete, :id=>'#logout', :class=>'nav-link') %>        
          </li>
        <% else %>
          <li>
          <%= link_to('Login', new_user_session_path, :class=>'nav-link')  %>  
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
    <%= yield %>
  </body>
</html>
